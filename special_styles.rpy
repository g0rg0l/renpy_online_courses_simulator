init 3:

### Интерфейс ту-ду в компьютере ###

    style title_of_todo_text:
        color "#000000"
        bold True
        size 50

    style tasks_todo_bar_button:
        background "#A9A9A9"
        hover_background "#696969"

### Интерфейс почты в компьютере ###

    style text_in_message_from_who: # текст "От кого" в письме
        size 50
        color "#999999"

    style text_in_message: # текст письма
        size 40
        color "#999999"
        line_leading 18
        layout "subtitle"

### Мини-игра на составление программы ###

    style left_btn_text: # текст на кнопках в левом боковом поле
        color "#4d6c9a"
        selected_color "#ffffff"

    style send_text: # текст на кнопке "отправить" в левом боковом поле
        size 50
        color "#ffffff"

    style send_text_studia:
        size 50
        color "#000000"

    style right_boxes_text: # текст на кнопках в правом grid'e
        selected_italic True
        color "#315287"
    
    style text_as_btn is text:
        color "#000000"
        hover_color "#ff8c00" 
        insensitive_color "#797979"